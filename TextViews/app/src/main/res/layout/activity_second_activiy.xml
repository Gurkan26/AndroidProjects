<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActiviy">

    <Button
        android:id="@+id/buton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="1. SAYFAYA DÖNMEK İÇİN TIKLA"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:text="2. SAYFA BURASI"
        android:textColor="#FF4436"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="354dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="230dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="hint"
        app:layout_constraintBottom_toTopOf="@+id/buton2"
        app:layout_constraintEnd_toEndOf="@+id/buton2"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/buton2" />

</androidx.constraintlayout.widget.ConstraintLayout>